/*
 * -------------------------------------------------
 *  Nextflow config file for running tests
 * -------------------------------------------------
 * Defines bundled input files and everything required
 * to run a fast and simple test. Use as follows:
 *   nextflow run nf-core/hlatyping -profile test_rna,<docker/singularity> --outdir <OUTDIR>
 */

params {
    config_profile_name = 'fastq Test Profile'
    config_profile_description = 'TODO'

    max_cpus = 2
    max_memory = 6.GB
    max_time = 48.h

    single_end = false
    input_paths = [
    ['Testdata', ['https://github.com/nf-core/test-datasets/raw/hlatyping/rna/CRC_81_N_1_fished.fastq.gz',
        'https://github.com/nf-core/test-datasets/raw/hlatyping/rna/CRC_81_N_2_fished.fastq.gz']]
    ]

    solver = 'glpk'
    seqtype = 'rna'
    bam = false
}
